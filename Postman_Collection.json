{
  "info": {
    "name": "Microservices Sales System",
    "description": "Complete API collection for Auth, Product, and Order services",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3003",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "[4] Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "response": []
        },
        {
          "name": "[5] Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "    console.log(\"Token saved:\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Product Service",
      "item": [
        {
          "name": "[6] Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop\",\n  \"price\": 999.99,\n  \"description\": \"High-performance laptop\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["products", "api", "products"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/api/products",
              "host": ["{{baseUrl}}"],
              "path": ["products", "api", "products"]
            }
          },
          "response": []
        },
        {
          "name": "[8] Get Product by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/api/products/:id",
              "host": ["{{baseUrl}}"],
              "path": ["products", "api", "products", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_PRODUCT_ID"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "[7] Place Order (Buy)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ids\": [\n    \"REPLACE_WITH_PRODUCT_ID_1\",\n    \"REPLACE_WITH_PRODUCT_ID_2\"\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/products/api/products/buy",
              "host": ["{{baseUrl}}"],
              "path": ["products", "api", "products", "buy"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Invoice/Order Service",
      "item": [
        {
          "name": "Get Invoice by Order ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/api/products/invoice/:id",
              "host": ["{{baseUrl}}"],
              "path": ["products", "api", "products", "invoice", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "REPLACE_WITH_ORDER_ID",
                  "description": "Order ID from /products/api/products/buy response"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
